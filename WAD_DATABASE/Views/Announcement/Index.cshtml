@model IEnumerable<Announcement>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Announcements</h1>


<div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
          @foreach(var item in Model)
           {
              <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap">  
                    <div class="card-body">
                         <p class="card-text">@item.AnnouncementName </p>
                         <p class="card-text">@item.Description </p>
                         <div class="d-flex justify-content-between align-items-center">
                             <div class="btn-group">
                                   <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Announcement" asp-action="Detail" asp-route-id="@item.Id"> Details </a>
                                  <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Announcement" asp-action="Edit" asp-route-id="@item.Id"> Edit </a> 
                                  <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Announcement" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                             </div>
                             <small class="text-muted"></small>
                        </div>
                  </div>
             </div>
            </div>  
           }
      </div>
    </div>
  </div>

